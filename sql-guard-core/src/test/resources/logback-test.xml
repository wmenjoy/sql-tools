<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console Appender for Testing - Simpler pattern for readability -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %-5level %logger{20} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Application Logger - DEBUG level to enable our debug logs during testing -->
    <logger name="com.footstone.sqlguard" level="DEBUG"/>

    <!-- Root Logger - WARN level to suppress INFO logs from test frameworks and third-party libraries -->
    <root level="WARN">
        <appender-ref ref="CONSOLE"/>
    </root>
</configuration>


















