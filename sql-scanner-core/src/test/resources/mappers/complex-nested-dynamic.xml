<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.ComplexMapper">
    <select id="complexSearch" resultType="User">
        SELECT * FROM user
        <where>
            <if test="ids != null">
                AND id IN
                <foreach collection="ids" item="id" open="(" close=")" separator=",">
                    #{id}
                </foreach>
            </if>
            <if test="name != null">AND name = #{name}</if>
            <choose>
                <when test="status == 1">AND status = 'active'</when>
                <when test="status == 2">AND status = 'inactive'</when>
                <otherwise>AND status != 'deleted'</otherwise>
            </choose>
        </where>
    </select>
</mapper>




