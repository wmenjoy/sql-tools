<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- ============================================ -->
    <!-- SQL Guard Demo - Logback Configuration      -->
    <!-- ============================================ -->

    <!-- Properties -->
    <property name="LOG_HOME" value="logs"/>
    <property name="APP_NAME" value="sql-guard-demo"/>

    <!-- Console Pattern -->
    <property name="CONSOLE_LOG_PATTERN"
              value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %highlight(%-5level) %cyan(%logger{36}) - %msg%n"/>

    <!-- File Pattern -->
    <property name="FILE_LOG_PATTERN"
              value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{50} - %msg%n"/>

    <!-- SQL Pattern (simplified for readability) -->
    <property name="SQL_LOG_PATTERN"
              value="%d{yyyy-MM-dd HH:mm:ss.SSS} | %msg%n"/>

    <!-- ============================================ -->
    <!-- Console Appender                             -->
    <!-- ============================================ -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${CONSOLE_LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <!-- ============================================ -->
    <!-- Application Log File Appender                -->
    <!-- ============================================ -->
    <appender name="APP_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_HOME}/application.log</file>
        <encoder>
            <pattern>${FILE_LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_HOME}/archive/application.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>50MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>5GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- ============================================ -->
    <!-- SQL Log File Appender                        -->
    <!-- ============================================ -->
    <appender name="SQL_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_HOME}/sql/sql.log</file>
        <encoder>
            <pattern>${SQL_LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_HOME}/sql/archive/sql.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>100MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>10GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- ============================================ -->
    <!-- Audit Log File Appender                      -->
    <!-- ============================================ -->
    <appender name="AUDIT_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_HOME}/audit/audit.log</file>
        <encoder>
            <pattern>%msg%n</pattern> <!-- Pure JSON output -->
            <charset>UTF-8</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_HOME}/audit/archive/audit.%d{yyyy-MM-dd-HH}.%i.log.gz</fileNamePattern>
            <maxFileSize>100MB</maxFileSize>
            <maxHistory>720</maxHistory> <!-- 30 days * 24 hours -->
            <totalSizeCap>10GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- ============================================ -->
    <!-- SQL Guard Validation Log File Appender       -->
    <!-- ============================================ -->
    <appender name="SQLGUARD_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_HOME}/sqlguard/validation.log</file>
        <encoder>
            <pattern>${FILE_LOG_PATTERN}</pattern>
            <charset>UTF-8</charset>
        </encoder>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_HOME}/sqlguard/archive/validation.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>100MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>5GB</totalSizeCap>
        </rollingPolicy>
    </appender>

    <!-- ============================================ -->
    <!-- Async Appenders (for better performance)     -->
    <!-- ============================================ -->
    <appender name="ASYNC_APP_FILE" class="ch.qos.logback.classic.AsyncAppender">
        <queueSize>512</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <appender-ref ref="APP_FILE"/>
    </appender>

    <appender name="ASYNC_SQL_FILE" class="ch.qos.logback.classic.AsyncAppender">
        <queueSize>1024</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <appender-ref ref="SQL_FILE"/>
    </appender>

    <appender name="ASYNC_AUDIT_FILE" class="ch.qos.logback.classic.AsyncAppender">
        <queueSize>8192</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <neverBlock>false</neverBlock> <!-- Block to prevent audit loss -->
        <appender-ref ref="AUDIT_FILE"/>
    </appender>

    <appender name="ASYNC_SQLGUARD_FILE" class="ch.qos.logback.classic.AsyncAppender">
        <queueSize>2048</queueSize>
        <discardingThreshold>0</discardingThreshold>
        <appender-ref ref="SQLGUARD_FILE"/>
    </appender>

    <!-- ============================================ -->
    <!-- Logger Configuration                         -->
    <!-- ============================================ -->

    <!-- Audit Logger (isolated from root) -->
    <logger name="com.footstone.sqlguard.audit.AUDIT" level="INFO" additivity="false">
        <appender-ref ref="ASYNC_AUDIT_FILE"/>
    </logger>

    <!-- SQL Guard Loggers -->
    <logger name="com.footstone.sqlguard" level="DEBUG" additivity="false">
        <appender-ref ref="ASYNC_SQLGUARD_FILE"/>
        <appender-ref ref="CONSOLE"/>
    </logger>

    <!-- MyBatis SQL Loggers - Print SQL statements -->
    <logger name="com.footstone.sqlguard.demo.mapper" level="DEBUG" additivity="false">
        <appender-ref ref="ASYNC_SQL_FILE"/>
        <appender-ref ref="CONSOLE"/>
    </logger>

    <!-- MyBatis Internal SQL Logger -->
    <logger name="org.apache.ibatis" level="DEBUG" additivity="false">
        <appender-ref ref="ASYNC_SQL_FILE"/>
    </logger>

    <!-- MyBatis-Plus SQL Logger -->
    <logger name="com.baomidou.mybatisplus" level="DEBUG" additivity="false">
        <appender-ref ref="ASYNC_SQL_FILE"/>
    </logger>

    <!-- JDBC Connection Pool -->
    <logger name="com.zaxxer.hikari" level="INFO"/>

    <!-- Spring Framework -->
    <logger name="org.springframework" level="INFO"/>
    <logger name="org.springframework.web" level="INFO"/>
    <logger name="org.springframework.boot" level="INFO"/>

    <!-- Kafka (if enabled) -->
    <logger name="org.apache.kafka" level="WARN"/>
    <logger name="org.springframework.kafka" level="INFO"/>

    <!-- Demo Application -->
    <logger name="com.footstone.sqlguard.demo" level="DEBUG" additivity="false">
        <appender-ref ref="ASYNC_APP_FILE"/>
        <appender-ref ref="CONSOLE"/>
    </logger>

    <!-- Root Logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="ASYNC_APP_FILE"/>
    </root>

</configuration>
